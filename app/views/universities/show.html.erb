<h2 class="content-item">University Details</h2>

<p>
  <strong>University Name:</strong>
  <%= @university.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @university.description %>
</p>

<%= link_to "Back", universities_path %>
<% if can? :edit, @university %>
  | <%= link_to "Edit", edit_university_path(@university) %>
<% end %>
<% if can? :destroy, @university %>
  | <%= link_to "Delete", @university, :data => { :confirm => "Are you sure?" }, :method => :delete %></td>
<% end %> 

<h2 class="content-item">Departments</h2>

<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>

<div class="panel panel-success">
  <table class="table table-hover">
    <tr class="success">
      <th>Department</th>
      <th><%= link_to "Add Department", new_university_department_path(@university) %></th>
    </tr>

    <% @departments.each do |department| %>
    <tr>
      <td><%= department.name %></td>
      <td>
        <%= link_to "Edit", edit_university_department_path(@university, department) %> |
        <%= link_to "Delete", university_department_path(@university, department), 
          :data => { :confirm => "Are you sure?" }, :method => :delete %></td> 
      </td>
    </tr>
    <% end %>
  </table>
</div>