<h2>Change your password</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form-horizontal" }) do |f| %>
	<% if devise_error_messages! != "" %>
		<div class="alert alert-danger"><%= devise_error_messages! %></div>
	<% end %>

  	<%= f.hidden_field :reset_password_token %>

  	<div class="form-group">
	<%= f.label :password, "New password", :class => "col-lg-2 control-label" %>
		<div class="col-lg-10">
			<%= f.password_field :password, :autofocus => true, :class => "form-control" %>
		</div>
	</div>

	<div class="form-group">
	<%= f.label :password_confirmation, "Confirm new password", :class => "col-lg-2 control-label" %>
		<div class="col-lg-10">
			 <%= f.password_field :password_confirmation, :class => "form-control" %>
		</div>
	</div>

	<div class="form-group">
		<label class="col-lg-2 control-label"></label>
		<div class="col-lg-10">
			<%= f.submit "Change my password", :class => "btn btn-primary" %> 
			<br/>
			<%= render "devise/shared/links" %>
		</div>
	</div>

<% end %>
