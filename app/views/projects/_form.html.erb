<% if @project.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% for message in @project.errors.full_messages %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %> 

<%= form_for [current_user, @project], html: {class: "input-group"} do |f| %>
  <div><%= f.label :title %><br />
  <%= f.text_field :title, :class => "form-control" %></div>

  <div><%= f.label :abstract %><br />
  <%= f.text_area :abstract, :class => "form-control" %></div>

  <div><%= f.submit :class => "btn btn-primary" %></div>
<% end %>
