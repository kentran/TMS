<h3>Project Info</h3>
<p>
  <strong>Title:</strong>
  <%= @project.title %>
</p>
 
<p>
  <strong>Abstract:</strong>
  <%= @project.abstract %>
</p>

<%= link_to "Edit", edit_user_project_path(@project), :class => "btn btn-primary" %>
<%= link_to "Back", :back, :class => "btn btn-default" %>

<h3>Upload File</h3>

<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% elsif flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>

<%= form_tag({ :action => "upload"}, multipart: true) do %>
  <%= file_field_tag 'file' %>
  <%= hidden_field_tag(:user_id, current_user.id) %>
  <%= hidden_field_tag(:project_id, @project.id) %>
  <%= submit_tag ("Upload"), :class => "btn btn-primary" %>
<% end %>

<table class="table table-hover">
  <th>File</th>
  <th>Uploaded at</th>
  <th></th>

  <% @project_files.each do |project_file| %>
    <tr>
      <td><%= project_file.file_name %></td>
      <td><%= project_file.created_at %></td>
      <td><%= link_to "View", "/web/viewer.html?file=/uploads/"+project_file.file_name %> | 
        <%= link_to "Download", :action => :download, :file_name => project_file.file_name %> |
        <%= link_to "Delete", project_file, :data => { :confirm => "Are you sure?" }, :method => :delete %></td>
    </tr>  
  <% end %>
</table>

