<h3 class="content-item">Notification Center</h3>
<% if flash[:notice] %>
	<div class="alert alert-success alert-dismissable">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		<%= flash[:notice] %>
	</div>
<% elsif flash[:alert] %>
	<div class="alert alert-danger alert-dismissable">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		<%= flash[:alert] %>
	</div>
<% end %>

<h4>My Preference</h4>
<%= form_for current_user, html: { :class => "form-horizontal" } do |f| %>
  <div class="form-group">
  	<label class="col-lg-1 control-label"></label>
    <div class="col-lg-11">
      <%= f.check_box :notif_on %> Receive Notification from others
    </div>
  </div>

  <div class="form-group">
    <label class="col-lg-1 control-label"></label>
    <div class="col-lg-11">
      <%= f.check_box :reminder_on %> Receive Reminders from myself and others
    </div>
  </div>

   <div class="form-group">
    <label class="col-lg-1 control-label"></label>
    <div class="col-lg-11">
      <%= f.check_box :upload_confirm_on %> Receive Upload confirmation
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Save', :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>

<h4>My Notifications</h4>
<div class="panel panel-success">
	<table class="table table-hover">
		<tr class="success">
			<th>To</th>
			<th>Sent on</th>
		</tr>

		<% @notifications.each do |notification| %>
		<tr>
			<td><%= notification.recipient %></td>
			<td><%= notification.created_at %></td>
		</tr>
		<% end %>
	</table>
</div>