<div class="panel panel-default">
	<div class="panel-heading">
		<%= form_for ([@project, @project.project_references.build]), html: {id: 'reference-form'}, remote: true do |f| %>
			<%= render 'project_references/form_fields', :f => f %>
		
			<div><%= f.submit "Add Reference", :class => "btn btn-primary btn-block" %></div>
			<div id="cancel"><a class="btn btn-default btn-block">Cancel</a></div>
		<% end %>
	</div>
</div>