<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div><%= f.label :first_name %><br />
  <%= f.text_field :first_name %></div>

  <div><%= f.label :last_name %><br />
  <%= f.text_field :last_name %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :title %><br />
  <%= f.text_field :title %></div>

  <div><%= f.label :university %><br />
  <%= f.text_field :university %></div>

  <div><%= f.label :department %><br />
  <%= f.text_field :department %></div>

  <div><%= f.label :level %>
  <%= f.select(:level, [['admin', 0], ['student',10], ['professor', 11], ['moderator', 12]]) %></div>

  <div><%= f.submit "Create" %></div>
<% end %>

<%= render "devise/shared/links" %>
