<h2>Manage Users</h2>

<% if flash[:notice] %>
  <div class="alert alert-danger"><%= flash[:notice] %></div>
<% end %>

<table class="table table-hover">
  <th>Type</th>
  <th>First Name</th>
  <th>Last Name</th>
  <th>Email</th>
  <th></th>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.level %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
      <td><%= link_to "Show", user %> |
        <%= link_to "Delete", user, :data => { :confirm => "Are you sure?" }, :method => :delete %></td>
    </tr>
  <% end %>
</table>
